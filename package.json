{
  "name": "minties",
  "version": "1.0.0",
  "description": "Crypto financial app for sending gifts and managing savings circles on Telegram",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "cd contracts && npm run compile",
    "build:frontend": "cd frontend && npm run build",
    "deploy:contracts": "cd contracts && npm run deploy:sepolia",
    "test": "cd contracts && npm test"
  },
  "workspaces": [
    "contracts",
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

